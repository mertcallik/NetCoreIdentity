@model PasswordForgotViewModel

@{
    Layout= "_Layout";
}
@section Links
{
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
}




<div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md mx-auto mt-5">
    <h2 class="text-2xl font-bold mb-6 text-center">Forgot Password</h2>
    <form id="forgotPasswordForm" method="post" asp-action="ForgotPassword">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email Address</label>
            <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Enter your email address">
        </div>
        <div class="flex items-center justify-center">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit" id="submitBtn">
                Submit
            </button>
        </div>
    </form>
</div>







@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>

    <script>
        // GSAP Animation
        document.addEventListener('DOMContentLoaded', () => {
            gsap.from('.bg-white', { duration: 1, opacity: 0, y: 50 });
        });

        document.getElementById('submitBtn').addEventListener('click', () => {
            gsap.to('#forgotPasswordForm', { duration: 0.5, opacity: 0, y: -20 });
            setTimeout(() => {
                alert('Password reset link has been sent to your email.');
                gsap.to('#forgotPasswordForm', { duration: 0.5, opacity: 1, y: 0 });
            }, 1000);
        });
    </script>

}
