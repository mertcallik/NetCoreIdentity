@model IEnumerable<AppRole>
@{
    Layout = "_Layout";
}
<a asp-action="Create" class="btn btn-primary mb-3">Rol Ekle</a>
<div class="d-block">
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Kullanıcılar</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td asp-role-users="@role.Id"></td>

                        <td>
                            <form method="post" class="d-inline-block">
                                <input type="hidden" name="Id" value="@role.Id"/>
                                <a  class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td class="text-center" colspan="4">Kayıt Bulunamadı</td>
                </tr>
            }

        </tbody>
    </table>
</div>