@model LoginViewModel;
@{
    Layout= "_Layout";
}
@section Links
{
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
}
@section Styles
{
        body {
            background-color: #f7f9fc;
        }
        .login-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }
        .login-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .login-header h2 {
            font-weight: 700;
        }
        .form-control {
            border-radius: 50px;
            padding: 20px;
        }
        .btn-login {
            border-radius: 50px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            transition: background-color 0.3s;
        }
        .btn-login:hover {
            background-color: #0056b3;
        }
}

<div class="login-container">
    <div class="login-header">
        <h2>Giriş Yap</h2>
    </div>
    <form method="post" asp-action="Login">
        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control">
        </div>

        <button type="submit" class="btn btn-login btn-block">Login</button>
        <div class="d-flex align-items-center mt-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input"  asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
            </div>
            <div class="ms-auto">
                <section class="text-primary"><a asp-action="ForgotPassword" class="text-decoration-none">Şifremi Unuttum</a></section>
            </div>
        </div>


        <div asp-validation-summary="All" class="text-danger">

        </div>
    </form>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
    <script>
        // GSAP animation for the login form
        gsap.from(".login-container", {
            duration: 1.5,
            y: -100,
            opacity: 0,
            ease: "bounce"
        });
        gsap.from(".login-header h2", {
            duration: 1,
            opacity: 0,
            delay: 1
        });
        gsap.from(".form-group", {
            duration: 1,
            x: -50,
            opacity: 0,
            stagger: 0.2,
            delay: 1.5
        });
        gsap.from(".btn-login", {
            duration: 1,
            scale: 0.5,
            opacity: 0,
            delay: 2
        });
    </script>
}
